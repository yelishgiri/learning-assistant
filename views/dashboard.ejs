<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/dashboard/styles.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="header-content">
          <div class="logo">
            <i class="fas fa-cloud"></i>
            <span>Edutora</span>
          </div>
          <div class="user-info">
            <span>Welcome, <%= user.first_name %> <%= user.last_name %></span>
            <div class="user-avatar">
              <%= user.first_name.charAt(0) %><%= user.last_name.charAt(0) %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="main-content">
      <section class="hero">
        <div class="container">
          <!-- Simplified and modernized hero content -->
          <div class="hero-content">
            <h1>Your Secure File Storage</h1>
            <p>
              Upload, organize, and access your files from anywhere with
              enterprise-grade security.
            </p>
          </div>

          <!-- Redesigned upload area with better structure -->
          <div class="upload-card">
            <div class="upload-area">
              <div class="upload-icon">
                <i class="fas fa-cloud-upload-alt"></i>
              </div>
              <div class="upload-text">
                <h3>Drop files here or click to browse</h3>
                <p>Supports all file types up to 100MB</p>
              </div>

              <form
                action="/file/upload"
                method="post"
                enctype="multipart/form-data"
                class="upload-form"
              >

                <input
                  type="file"
                  id="fileInput"
                  name="file"
                  style="display: none"
                  multiple
                  onchange="updateFileNameDisplay()"
                />

                <div class="form-row">
                  <button
                    class="btn btn-primary"
                    type="button"
                    onclick="document.getElementById('fileInput').click()"
                  >
                    <i class="fas fa-plus"></i>
                    Choose Files
                  </button>
                  <span id="filename" class="filename-display">No files selected</span>
                </div>
    <script>
      function updateFileNameDisplay() {
        const input = document.getElementById('fileInput');
        const label = document.getElementById('filename');
        if (input.files && input.files.length > 0) {
          const names = Array.from(input.files).map(f => f.name).join(', ');
          label.textContent = names;
        } else {
          label.textContent = 'No files selected';
        }
      }
    </script>

                <div class="form-row">
                  <div class="select-wrapper">
                    <label for="folder-select">Destination Folder</label>
                    <select
                      id="folder-select"
                      name="folder"
                      class="folder-select"
                    >
                      <% folders.forEach((folder) => { %>
                      <option value="<%= folder.id %>">
                        <%= folder.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-row">
                  <button class="btn btn-success" type="submit">
                    <i class="fas fa-upload"></i>
                    Upload Files
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>

      <!-- Improved folder management section -->
      <section class="folders-section">
        <div class="container">
          <div class="section-header">
            <div class="section-title">
              <h2>Your Folders</h2>
              <p>Organize your files in custom folders</p>
            </div>
            <a class="btn btn-secondary" href="/folder/create">
              <i class="fas fa-folder-plus"></i>
              Create New Folder
            </a>
          </div>

          <!-- Redesigned folder display with cards -->
          <div class="folders-grid">
            <% folders.forEach((folder) => { %>
            <div class="folder-card">
              <div class="folder-icon">
                <i class="fas fa-folder"></i>
              </div>
              <div class="folder-info">
                <h4 class="folder-name"><%= folder.name %></h4>
                <p class="folder-meta">
                  <span class="folder-date">
                    <i class="fas fa-calendar"></i>
                    <%= new Date(folder.created_at).toLocaleDateString() %>
                  </span>
                  <span class="folder-author">
                    <i class="fas fa-user"></i>
                    <%= folder.author %>
                  </span>
                </p>
              </div>
              <div class="folder-actions">
                <form action="/folder/<%= folder.id %>/details" method="GET">
                  <button type="submit" class="action-btn" title="Open Folder">
                    <i class="fas fa-external-link-alt"></i>
                  </button>
                </form>
                <form action="/folder/<%= folder.id %>/update" method="GET">
                  <button
                    type="submit"
                    class="action-btn"
                    title="Folder Settings"
                  >
                    <i class="fas fa-cog"></i>
                  </button>
                </form>
                <form action="/folder/<%= folder.id %>/delete" method="POST">
                  <button
                    type="submit"
                    class="action-btn"
                    title="Folder Delete"
                  >
                    <i class="fa-solid fa-trash"></i>
                  </button>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
